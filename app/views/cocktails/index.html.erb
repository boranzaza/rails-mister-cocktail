<h1>Welcome to Boran's Cocktails</h1>

<ul>
  <% @cocktails.each do |cocktail| %>
  <div class="card" style="width: 18rem;">
  <img src="https://source.unsplash.com/featured/?cocktail" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%=cocktail.name%></h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="" class="btn btn-primary"><%=link_to cocktail.name, cocktail_path(cocktail)%></a>
  </div>
</div>
  <% end %>
</ul>

